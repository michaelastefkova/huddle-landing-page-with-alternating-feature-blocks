{
  "name": "postcss-basic-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Wilfredo Machado",
  "license": "MIT",
  "scripts": {
    "watch": "postcss css/main.css -o style.css -w --verbose",
    "prefix": "postcss --use autoprefixer -b 'last 10 versions' style.css -o style.prefix.css --verbose --no-map",
    "compress": "postcss style.prefix.css --use cssnano -o style.min.css --verbose --no-map "
  },
  "devDependencies": {
    "autoprefixer": "^10.2.3",
    "cssnano": "^4.1.10",
    "postcss": "^8.2.4",
    "postcss-cli": "^8.3.1",
    "postcss-extend": "^1.0.5",
    "postcss-import": "^14.0.0",
    "postcss-mixins": "^7.0.2",
    "postcss-nested": "^5.0.3",
    "postcss-preset-env": "^6.7.0",
    "stylelint": "^13.9.0",
    "stylelint-config-standard": "^20.0.0"
  }
}
